{
  "name": "charitychain-hackathon",
  "version": "1.0.0",
  "description": "Transparent donation tracking platform built on Cardano blockchain",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:backend && npm run install:contracts",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:contracts": "cd contracts && aiken check",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend && npm run build:contracts",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:contracts": "cd contracts && aiken build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:contracts",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:contracts": "cd contracts && aiken test"
  },
  "keywords": [
    "cardano",
    "blockchain",
    "charity",
    "donations",
    "transparency",
    "aiken",
    "next.js",
    "express.js"
  ],
  "author": "CharityChain Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/charitychain-hackathon.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/charitychain-hackathon/issues"
  },
  "homepage": "https://github.com/yourusername/charitychain-hackathon#readme"
}
